<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="?attr/button_background"/>
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="?attr/button_active_background"/>
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="?attr/button_active_background"/>
    <!--Default Background Color -->
    <item android:color="?attr/button_active_background"/>

</selector>


